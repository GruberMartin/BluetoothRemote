<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/tvPairedDeviceHintMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Bedienen von bereits verbundenen Geräten"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSelectDeviceMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wähle ein Gerät aus" />

        <Spinner
            android:id="@+id/spDeviceListMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvChooseAnActionMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wähle aus was du steuern möchtest" />

        <Spinner
            android:id="@+id/spActionSelectMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnConnectMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnBtnConnectClicked"
            android:text="Verbinden" />

        <TextView
            android:id="@+id/tvSearchForDevicesHintMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Such nach noch nicht verbundenen Geräten"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFindDevicesMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnBtnFindDevicesClicked"
            android:text="Suche nach Geräten" />

        <TextView
            android:id="@+id/tvDiscoveredDevicesMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unten werden alle gefundenen Geräte angezeigt" />

        <Spinner
            android:id="@+id/spDiscoveredDevicesMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnConnectToNewDeviceMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onBtnConnectToNewDeviceClicked"
            android:text="Mit dem ausgewählten Gerät verbinden" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>